pipeline {
    agent any
      tools {
         maven 'Maven' 
    }
    stages {
        stage('Build') {
            steps {
                //sh 'mvn install'
                sh 'mvn clean package'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        stage('Deliver') {
            steps {
                sh './jenkins/scripts/deliver.sh'
            }
        }
    }
}
